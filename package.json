{
  "name": "vscode-pytest",
  "displayName": "Pytest IntelliSense",
  "description": "Provides autocompletion for pytest fixtures in VS Code.",
  "version": "1.0.0",
  "publisher": "Cameron Maske",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onDebug",
    "onLanguage:python"
  ],
  "main": "./code/out/extension",
  "contributes": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/cameronmaske/pytest-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/cameronmaske/pytest-vscode/issues"
  },

  "scripts": {
    "compile": "tsc -b",
    "bundle": "npm run compile && esbuild code/src/extension.ts --bundle --outfile=code/out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "package": "npx vsce package",
    "build": "node build.js && npm run bundle && npm run package",
    "watch": "tsc -b -w",
    "publish": "npm run build && npm run package && npx vsce publish"
  },
  "devDependencies": {
    "@types/node": "^14.14.41",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "esbuild": "^0.12.9",
    "eslint": "^7.23.0",
    "json-to-markdown-table": "^1.0.0",
    "typescript": "^4.2.4",
    "vsce": "^2.6.5"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  }
}
